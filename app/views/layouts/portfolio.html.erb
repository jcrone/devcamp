<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'portfolios', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= render 'shared/nav' %>


    <%= yield %>

    <div>
      <div><%= link_to "Home", root_path %></div>
      <div><%= link_to "Portfolios", portfolios_path %></div>
      <div><%= link_to "Blogs", blogs_path %></div>

    </div>

    <% if session[:source] %>
      Thanks for visiting me from <%= session[:source] %>
    <% end %>

  </body>
</html>
